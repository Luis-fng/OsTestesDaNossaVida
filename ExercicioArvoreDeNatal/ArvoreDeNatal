import java.util.Scanner;

public class Main {
    
    private static String repeatChar(char c, int count) {
        if (count <= 0) {
            return "";
        }
        StringBuilder sb = new StringBuilder();
        for (int i = 0; i < count; i++) {
            sb.append(c);
        }
        return sb.toString();
    }
    
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        while (sc.hasNextInt()) {
            int N = sc.nextInt();
            int totalWidth = N; 
           
            for (int currentWidth = 1; currentWidth <= N; currentWidth += 2) {
                int padding = (totalWidth - currentWidth) / 2;
                
                String spaces = repeatChar(' ', padding);
                String stars = repeatChar('*', currentWidth);
                
                System.out.println(spaces + stars);
            }

            int baseWidth1 = 1;
            int paddingBase1 = (totalWidth - baseWidth1) / 2;
            String spacesBase1 = repeatChar(' ', paddingBase1);
            System.out.println(spacesBase1 + "*");

            int baseWidth3 = 3;
            int paddingBase3 = (totalWidth - baseWidth3) / 2;
            String spacesBase3 = repeatChar(' ', paddingBase3);
            System.out.println(spacesBase3 + "***");

            System.out.println();
        }
        
        sc.close();
    }
}


import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class RepeatCharTest {
    private static String repeatChar(char c, int count) {
        if (count <= 0) {
            return "";
        }
        StringBuilder sb = new StringBuilder();
        for (int i = 0; i < count; i++) {
            sb.append(c);
        }
        return sb.toString();
    }
    
    @Test
    void testRepetirAsterisco() {
        assertEquals("*****", repeatChar('*', 5));
    }

    @Test
    void testRepetirEspaco() {
        assertEquals("   ", repeatChar(' ', 3));
    }

    @Test
    void testContagemZero() {
        assertEquals("", repeatChar('A', 0));
    }

    @Test
    void testContagemNegativa() {
        assertEquals("", repeatChar('B', -2));
    }
}

import org.junit.jupiter.api.AfterEach;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import java.io.ByteArrayInputStream;
import java.io.ByteArrayOutputStream;
import java.io.InputStream;
import java.io.PrintStream;
import static org.junit.jupiter.api.Assertions.assertEquals;


public class MainIntegrationTest {

    private final InputStream originalSystemIn = System.in;
    private final PrintStream originalSystemOut = System.out;
    private ByteArrayOutputStream testOut;

    @BeforeEach
    void setup() {
        testOut = new ByteArrayOutputStream();
        System.setOut(new PrintStream(testOut));
    }

    @AfterEach
    void restoreStreams() {
        System.setIn(originalSystemIn);
        System.setOut(originalSystemOut);
    }
    
    private void provideInput(String data) {
        ByteArrayInputStream testIn = new ByteArrayInputStream(data.getBytes());
        System.setIn(testIn);
    }

    private String getOutput() {
       
        return testOut.toString().replace("\r\n", "\n");
    }

    @Test
    void testCaseN9() {
        
        provideInput("9");
        Main.main(new String[]{});

        
        String expectedOutput = 
            "    *\n" +
            "   ***\n" +
            "  *****\n" +
            " *******\n" +
            "*********\n" +
            "    *\n" +
            "   ***\n" +
            "\n"; 
            
        assertEquals(expectedOutput, getOutput(), "A saída para N=9 falhou.");
    }

    @Test
    void testCaseN5() {
        
        provideInput("5");
        Main.main(new String[]{});

        
        String expectedOutput = 
            "  *\n" +
            " ***\n" +
            "*****\n" +
            "  *\n" +
            " ***\n" +
            "\n"; 

        assertEquals(expectedOutput, getOutput(), "A saída para N=5 falhou.");
    }
    
    @Test
    void testMultipleCases() {
        
        provideInput("9\n5");
        Main.main(new String[]{});

        String expectedOutput9 = 
            "    *\n" + "   ***\n" + "  *****\n" + " *******\n" + "*********\n" + "    *\n" + "   ***\n" + "\n"; 

        String expectedOutput5 = 
            "  *\n" + " ***\n" + "*****\n" + "  *\n" + " ***\n" + "\n"; 
            
        String expectedCombined = expectedOutput9 + expectedOutput5;

        assertEquals(expectedCombined, getOutput(), "O processamento de múltiplos casos falhou.");
    }
}
